@page
@using MVCApplication.Models;
@model ErrorPageModel
<div class="error-container">
    <div class="error-message">
        <h2>@Html.DisplayFor(x => Model.ErrorMessage)</h2>
    </div>
    <a asp-controller="Home" asp-action="Index" class="error-link">Go to Homepage</a>
</div>

<style>
    .error-container {
        text-align: center;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 70vh;
    }
    .error-code {
        font-size: 3em;
        color: #333;
    }
    .error-message {
        font-size: 1.5em;
        color: #666;
    }
    .error-link {
        margin-top: 20px;
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }
    .error-link:hover {
        background-color: #0056b3;
        color: white;
    }
</style>
